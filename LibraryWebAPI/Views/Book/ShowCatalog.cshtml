@model IEnumerable<LibraryWebAPI.Models.Book> // Specify the correct namespace and type for the Book model

<h2>Book Catalog</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Year</th>
                <th>Status</th>
                <th>Borrowed By</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Year</td>
                    <td>@book.Status</td>
                    <td>@book.BorrowerName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No books available.</p>
}
