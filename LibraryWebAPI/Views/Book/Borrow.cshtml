<!-- Views/Book/Borrow.cshtml -->
@model IEnumerable<LibraryWebAPI.Models.Book>

<h2>Borrow a Book</h2>

@if (!Model.Any())
{
    <p>No books available to borrow.</p>
}
else
{
    <form asp-controller="Book" asp-action="Borrow" method="post">
        <div class="form-group">
            @foreach (var book in Model)
            {
                <div class="book-item">
                    <label>
                        <input type="radio" name="bookId" value="@book.Id" />
                        @book.Title by @book.Author (Year: @book.Year)
                    </label>
                </div>
            }
        </div>

        <div class="form-group mt-3">
            <label for="borrowerName">Borrower's Name:</label>
            <input id="borrowerName" name="borrowerName" class="form-control" required />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Borrow Selected Book</button>
        </div>
    </form>
}
